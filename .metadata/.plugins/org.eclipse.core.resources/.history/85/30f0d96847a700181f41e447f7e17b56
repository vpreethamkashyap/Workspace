#ifndef SHAPE_HPP_
#define SHAPE_HPP_

#include <iostream>

class shape
{

public:

  /**
   * Constructor
   */
  shape();

  /**
   * Destructor
   */
  virtual ~shape();

  /**
   *
   * @param x
   * @param y
   */
  virtual void setArea(int x, int y) = 0;

  /**
   *
   * @return
   */
  virtual int getArea() = 0;

  virtual void setType()

};


#endif

